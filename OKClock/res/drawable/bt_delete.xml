<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:state_pressed="true"><shape android:shape="rectangle">
             <gradient android:angle="270" android:centerColor="#EFFF0000" android:endColor="#7FFF0000" android:startColor="#5FFF0000" /> 
<!--android:angle="270" android:centerColor="#FF0000" android:endColor="#F02727" android:startColor="#F9ACAC"  -->
             <stroke android:width="1dp" android:color="#2F000000" />

            <padding android:bottom="3dp" android:left="7dp" android:right="7dp" android:top="3dp" />
            
             <corners android:radius="2dp" />
        </shape></item>
    <item android:state_focused="true"><shape android:shape="rectangle">
            <gradient android:angle="270" android:centerColor="#EFFF0000" android:endColor="#7FFF0000" android:startColor="#5FFF0000" />
            
            <stroke android:width="1dp" android:color="#2F000000" />

            <padding android:bottom="3dp" android:left="7dp" android:right="7dp" android:top="3dp" />
            
             <corners android:radius="2dp" />
        </shape></item>
    <item><shape android:shape="rectangle">
            <solid android:color="#5FCCCECD" />

            <stroke android:width="1dp" android:color="#2F000000" />

            <padding android:bottom="3dp" android:left="7dp" android:right="7dp" android:top="3dp" />
            
              <corners android:radius="2dp" />
        </shape></item>

</selector>