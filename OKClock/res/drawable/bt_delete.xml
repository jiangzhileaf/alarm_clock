<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:state_pressed="true"><shape android:shape="rectangle">
            <gradient android:angle="270" android:centerColor="#EFFF0000" android:endColor="#7FFF0000" android:startColor="#5FFF0000" />

            <padding android:bottom="7dp" android:left="7dp" android:right="7dp" android:top="7dp" />

            <stroke android:width="2dp" android:color="#5F000000" />
           
            <corners android:radius="12dp" />
        </shape></item>
    <item android:state_focused="true"><shape android:shape="rectangle">
            <gradient android:angle="270" android:centerColor="#EFFF0000" android:endColor="#7FFF0000" android:startColor="#5FFF0000" />

            <padding android:bottom="7dp" android:left="7dp" android:right="7dp" android:top="7dp" />
			
            <stroke android:width="2dp" android:color="#5F000000" />
            
            <corners android:radius="12dp" />
        </shape></item>
    <item><shape android:shape="rectangle">
            <gradient android:angle="270" android:centerColor="#FF0000" android:endColor="#F02727" android:startColor="#F9ACAC" />

            <padding android:bottom="7dp" android:left="7dp" android:right="7dp" android:top="7dp" />

            <stroke android:width="2dp" android:color="#5F000000" />

            <corners android:radius="12dp" />
        </shape></item>

</selector>